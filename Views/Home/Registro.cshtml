@model Registro

<h1>Registre el Producto que Desea Comprar </h1>


<div asp-validation-summary="All"></div>

<form action="" method="post">



<div class="form-group">
        <label >Nombre Del Producto:</label>
        <input type="text" asp-for="Nombre_del_Producto" required class="form-control">
    </div>

    <div class="form-group">
        <label > Url de la Foto del  Producto:</label>
        <input type="Url" asp-for="Url_Producto" required class="form-control">
    </div>

    <div class="form-group">
        <label > Descripción:</label>
        <input type="text" asp-for="Descripcion" required class="form-control">
    </div>

    <div class="form-group">
        <label > Precio:</label>
        <input type="text" asp-for="Precio" required class="form-control">
    </div>

    <div class="form-group">
        <label > Celular:</label>
        <input type="tel" asp-for="Celular" required class="form-control">
    </div>

    <div class="form-group">
        <label > Dirección de la Compra:</label>
        <input type="text" asp-for="Lugar_De_Compra" required class="form-control">
    </div>

    <div class="form-group">
        <label > Nombre del Usuario:</label>
        <input type="text" asp-for="Nombre" required class="form-control">
    </div>


    <div class="form-group  text-center" >
       <button class="btn btn-primary">Enviar</button>
    </div>

</form>